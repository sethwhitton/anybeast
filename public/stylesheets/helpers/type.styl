$font-family1 = "Rasmus-Regular", "Times New Roman", system, -apple-system, ".SFNSDisplay-Regular", "Helvetica Neue", "Lucida Grande"

$font-family2 = "PxGrotesk-Regular", "San Francisco", system, -apple-system, ".SFNSDisplay-Regular", "Helvetica Neue", "Lucida Grande"

$type-light = 300
$type-regular = 400
$type-medium = 500
$type-bold = 700

.caps
  font-family $font-family2
  font-weight $type-light
  font-size 0.8125rem
  color $silver
  letter-spacing .1rem
  text-transform uppercase
  line-height 1.2rem

.headline
  font-family $font-family1
  font-weight $type-light
  color $white
  letter-spacing 1px

.small
  font-size 0.75rem
  line-height 1.75rem

.medium
  font-size 1.875rem
  line-height 2.2rem

  @media $tablet
    font-size 2.125rem
    line-height 2.8rem

.middleweight
  font-size 2.188rem
  line-height 2.6rem

  @media $tablet
    line-height 2.4rem

.large
  font-size 2.125rem
  line-height 2.8rem

  @media $tablet
    font-size 2.813rem
    line-height 3.8rem


.white
  color $white

.gold
  color $gold

.silver
  color $silver

.dark-blue
  color: $dark-blue

.dark
  color $black

.ghost
  color $faint-grey
