header
  background-block()
  background $black
  // padding-bottom $baseline*8v

  .hero
    position relative
    width 100%
    max-height 80vh
    min-height 920px

    .ace
      display none
      position absolute

      @media $tablet
        display inherit
        width 49px
        height 97px
        top 35px
        left 42px

    & > img
      width 100%
      height 100%

    .flip
      flipit()
      display none
      position absolute

      @media $tablet
        display inherit
        width 49px
        height 97px
        bottom 45px
        right 42px

      & > img
        width 100%
        height 100%

