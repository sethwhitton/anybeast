    .mob
      display block
      position absolute
      top 75px
      width 100%
      text-align center
      margin-bottom $baseline*5

      @media $tablet
        display none

      & > p
        padding-bottom 2px

        &:nth-child(2)
          padding-bottom 3px
          margin-top -6px

    .intro
      text-align center
      margin-top 220px
      width 100%

      @media $tablet
        top 220px

      .lockup
        width 80%
        margin 0 auto

        @media $tablet
          width 60%

        @media $desktop
          max-width 418px
          width 34%

      .anybeast
        display block
        margin 0 auto 53px
        max-width 200px

        @media $tablet
          max-width 256px

      .tagline
        width 100%
        display none
        margin-bottom $baseline*2

        @media $tablet
          display block

      .illo
        max-width 250px
        margin -28px auto $baseline*5.5 auto
        display block

        @media $tablet
          max-width 334px

      .down-arrow
        width 15px
        margin 0 auto


  .continue-arrow
    background-block()
    margin-bottom $baseline*6

