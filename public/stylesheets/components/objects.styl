#objects
	@media $desktop
		background-block()

	main
		padding-bottom $baseline*8
		text-align center
		padding 0
		margin 0 auto

		@media $tablet
			padding-bottom $baseline*12

		.object-holder
			flexbox()
			flex-flow()
			content-block(center, flex-wrap)
			margin 0

			.object
				flexbox()
				justify-content(space-around)
				align-items(center)
				width 100%
				min-height 620px

				@media $tablet
					width 100%
					min-height 635px
					margin 60px 0

				@media $desktop
					width 50%
					margin 0

				& > img
					margin 0 auto

				.button
					background $black
					border 1px solid $gold
					color $white
					margin-top 8px
					padding 6px 20px 8px 20px
					font-size 0.75rem

			#broadside
				position relative

				& > .border
					border 7px solid $silver
					width 80%
					padding 65px 25px

					@media $tablet
						width 45%

					@media $desktop
						width 55%

					&:hover
						cursor pointer

					p
						font-size 0.875rem
					a
						text-decoration none

					.arrow-tail
						background url("../images/icn_arrow-tail@2x.png") no-repeat center
						background-size contain
						height 40px
						width 15px
						margin $baseline*3 auto

					.arrow-head
						background url("../images/icn_arrow-head@2x.png") no-repeat center
						background-size contain
						height 25px
						width 11px
						margin $baseline*3 auto

					ul
						margin $baseline*2 0

					li
						margin $baseline*3 0
						letter-spacing .1rem

			#works
				margin-bottom $baseline*0

				& > .box
					width 75%

					@media $tablet
						width 55%

					@media $desktop
						min-height 0
						width 65%
						margin-left -25px

					img
						margin-bottom $baseline*5
					h2
						margin-bottom $baseline*2.5
					a
						text-decoration none

			#disciplines
				position relative
				margin-bottom $baseline*6

				@media $tablet
					margin-bottom $baseline*10

				@media $desktop
					margin-bottom $baseline*6

				& > .box
					width 90%

					@media $tablet
						width 75%

					@media $desktop
						margin-top -50px

					&:hover
						cursor pointer

					a
						text-decoration none
					img
						margin-bottom $baseline*5
					h2
						margin-bottom $baseline*2

			#testimonial
				margin-bottom $baseline*12
				padding 0 20px

				@media $tablet
					margin-bottom $baseline*16

				@media $desktop
					margin-bottom $baseline*4

				& > .border
					border 1px solid $black
					background $silver
					max-width 360px
					padding 65px 0 42px

					h2
						padding 0 40px

					h3
						margin-bottom 6px

					p
						font-size 0.8125rem
						margin-bottom $baseline*1.5
						line-height 1.45rem
						padding 0 32px

						@media $tablet
							padding 0 55px

					.quote
						line-height 1.7rem
						font-size 0.8125rem

					span
						display block
						margin-bottom 3px

			#thesis
				margin-bottom $baseline*4

				@media $tablet
					margin-bottom $baseline*12

				@media $desktop
					margin-bottom $baseline*4

				& > .border
					width 320px
					background $blue
					position relative

					@media $tablet
						width 380px

					&:before
						content ""
						position absolute
						top 0
						left 0
						border-bottom 30px solid $blue
						border-left 30px solid $black
						border-right 30px solid $black
						width 260px
						height 0

						@media $tablet
							width 300px
							border-bottom 40px solid $blue
							border-left 40px solid $black
							border-right 40px solid $black

					&:after
						content ""
						position absolute
						bottom 0
						left 0
						border-top 30px solid $blue
						border-left 30px solid $black
						border-right 30px solid $black
						width 260px
						height 0

						@media $tablet
							width 300px
							border-top 40px solid $blue
							border-left 40px solid $black
							border-right 40px solid $black

					.box
						width 75%
						margin 0 auto
						padding 40px 0 35px 0px

						@media $tablet
							padding 60px 0 45px 0

					p
						font-size  0.8125rem
						margin-bottom $baseline*2
						line-height 1.75rem
						letter-spacing 1.25px
						padding 0 12px

					img
						width 50%
						margin 0 auto $baseline*1.5

					h2
						margin-bottom $baseline*2

			#fresh-eye
				position relative
				margin-bottom $baseline*9

				@media $tablet
					margin-bottom $baseline*4

				& > .box
					width 85%

					&:hover
						cursor pointer

					@media $tablet
						width 75%

					a
						text-decoration none
					img
						margin-bottom $baseline*6
					h2
						margin-bottom $baseline*2
