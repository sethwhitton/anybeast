#team-modal

.modal-box
  center-block()
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  // background: rgba(0, 0, 0, 0.8);
  z-index 99999
  opacity 0
  -webkit-transition opacity 400ms ease-in
  -moz-transition opacity 400ms ease-in
  transition opacity 400ms ease-in
  pointer-events none

  &:target
    opacity 1
    pointer-events auto

  & > .contents
    background-color $gold
    width 80%
    height 90%
    position relative
    margin 0 auto
    padding 75px 60px

    .close
      position inherit
