#contact
  background-block()

  & > main
    col(10,1)
    padding-bottom $baseline*14
    text-align center

    @media $desktop
      col(7,2.5)

    .container
      background $gold
      padding 75px 40px

      @media $tablet
        padding 85px 75px 75px 75px

      h2
        margin-bottom $baseline*3

        @media $tablet
          margin-bottom $baseline*2

      p
        display block

        @media $tablet
          display inline-block

      a
        text-decoration none

        &:hover
          color $white

      span.divider
        width 15px
        border-top 2px solid $white
        margin 15px auto 15px auto
        display block

        @media $tablet
          margin 0 10px 3px 10px
          display inline-block
