#about
	background-block()

	& > main
		position relative

		.frame-wrap
			width 100%
			height 100vh
			padding 0 80px
			position absolute

			& > div
				height 100vh

				.frame
					@media $tall
						display none

				.frame-tall
					@media $common
						display none
					@media $taller
						display none

		.active
			position fixed
			top 0

		.end-active
			position absolute
			bottom 0
			// margin-top 155px

		.frame-content
			margin 0 auto
			text-align center
			width 85%
			height 100%

		 	.flex
				center-block()

				.introduction
					width 70%
					center-block()
					height 100vh

					& > div
						& > img
							max-width 180px
							margin-bottom $baseline*4

				.disciplines
					width 100%
					center-block()
					height 100vh

					p
						width 70%
						margin 0 auto $baseline*3

					h2
						width 60%
						margin 0 auto $baseline*3

					.shapes
						flexbox()
						justify-content center
						margin-top $baseline*6
						padding 0 100px

						.ux
							max-width 290px
							width 22%
							margin-right 40px

						.content
							max-width 315px
							padding-bottom 50px
							margin 0 15px 0 0
							width 24%

						.visual
							max-width 290px
							width 22%
							margin-left 40px
