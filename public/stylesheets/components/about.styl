		.frame-content
			margin 0 auto
			text-align center
			width 100%
			height 100%

			@media $tablet
				width 85%

		 	.flex
				center-block()

				.frame
					width 100%

				.introduction
					min-height 80vh
					width 100%
					center-block()
					border-bottom 1px solid $light-grey
					border-top 1px solid $light-grey


					@media $tablet
						width 100%
						min-width 450px
						border none
						background url('../images/frame_mini@2x.png') no-repeat center center
						background-size contain

					@media $desktop
						background url('../images/frame_1336@2x.png') no-repeat center center
						background-size contain

					& > .content
						padding 0 30px

						@media $tablet
							padding 0 70px

						& > .key
							max-width 140px
							margin-bottom $baseline*2

							@media $tablet
								max-width 140px
								margin-bottom $baseline*4

							@media $desktop
								max-width 180px

						h2
							padding 0 30px
							max-width 900px

				.how-we-work
					min-height 80vh
					width 100%
					center-block()
					border-bottom 1px solid $light-grey

					@media $tablet
						width 100%
						min-width 450px
						border none

					& > div
						padding 0 30px

						@media $tablet
							padding 0

						p
							margin-bottom $baseline*2

						h2
							padding 0
							max-width 900px

							@media $tablet
								padding 0 60px

				.our-disciplines
					center-block()
					min-height 80vh
					width 100%
					border-bottom 1px solid $light-grey

					@media $tablet
						width 100%
						min-width 450px
						border none
						background url('../images/frame_mini@2x.png') no-repeat center center
						background-size contain

					@media $desktop
						background url('../images/frame_1336@2x.png') no-repeat center center
						background-size contain


					& > div
						p
							margin-bottom $baseline*3

							@media $phone
								margin-top $baseline*12

						h2
							width 100%
							padding 0 30px
							margin $baseline*3 auto

							@media $tablet
								width 75%

						.shapes
							@media $phone
								text-align center
								margin-top $baseline*5
								margin-bottom $baseline*12

							@media $tablet
								flexbox()
								justify-content center
								align-items center
								flex-wrap wrap
								width 100%
								margin-top $baseline*6

							@media $desktop
								flex-wrap nowrap

							.ux
								width 60%
								margin 0 auto $baseline*4

								@media $tablet
									width 200px
									margin 0 30px 30px 0

								@media $desktop
									max-width 210px
									width 19%
									margin 0 27px 0 0

							.content
								width 62%
								margin 0 auto $baseline*4

								@media $tablet
									width 220px
									margin 0 0 0 30px

								@media $desktop
									max-width 245px
									padding-bottom 50px
									margin 0 25px 0 0
									width 21%

							.visual
								width 60%
								margin 0 auto $baseline*4

								@media $tablet
									width 200px
									margin 0 10px

								@media $desktop
									max-width 210px
									width 19%
									margin 0 15px
